    private List<TreeViewItem> _sampleData = new List<TreeViewItem>()
    {
        new TreeViewItem("Item 1", new List<TreeViewItem>()
        {
            new TreeViewItem("Item 1.1"),
            new TreeViewItem("Item 1.2", new List<TreeViewItem>()
            {
                new TreeViewItem("Item 1.2.1", new List<TreeViewItem>()
                {
                    new TreeViewItem("Item 1.2.1.1"),
                    new TreeViewItem("Item 1.2.1.2"),
                    new TreeViewItem("Item 1.2.1.3")
                })
            }),
            new TreeViewItem("Item 1.3")
        }),
        new TreeViewItem("Item 2")
    };
}
